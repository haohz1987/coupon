<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/week"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="今天"
                android:textColor="#a1a1a1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="15:22"
                android:textColor="#333"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tradeImg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            />
        <!-- android:src="@drawable/trade_recode_item_img02"  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/cell00"
                style="@style/trade_recode_info_font_style"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="1111" />

       <!--     <TextView
                android:id="@+id/cell01"
                style="@style/trade_recode_info_font_style"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2222"
                android:visibility="gone" />-->

            <TextView
                android:id="@+id/cell10"
                style="@style/trade_recode_info_font_style"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/cell00"
                android:layout_marginTop="15dp"
                android:lines="1"
                android:text="3333" />

   <!--         <TextView
                android:id="@+id/cell11"
                style="@style/trade_recode_info_font_style"
                android:layout_width="wrap_content"
                android:layout_below="@+id/cell00"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/cell10"
                android:text="4444"
                android:visibility="gone" />-->
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/lastTv"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#333" />
    <!--trade_adapter_line_divder-->
</LinearLayout>