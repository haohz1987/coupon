<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.handpay.coupon.view.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">
            <LinearLayout
                android:id="@+id/ll_branch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_45"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_branch_name"
                    style="@style/text_style"
                    android:text="门店名称" />

                <EditText
                    android:id="@+id/et_branch_name"
                    style="@style/edit_text_style"
                    android:hint="请输入分店名称" />

                <ImageView
                    android:id="@+id/iv_branch_name"
                    style="@style/image_view_style" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style"
                    android:text="展示类型" />

                <com.handpay.coupon.view.flowtag.FlowTagLayout
                    android:id="@+id/ftl_1"
                    android:layout_marginTop="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_color" />
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_45"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/text_style"
                    android:text="展示提示" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/edit_text_style"
                    android:hint="请输入优惠券提示信息" />

                <ImageView
                    android:id="@+id/iv_address"
                    style="@style/image_view_style" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_color" />
            <LinearLayout
                android:id="@+id/ll_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_45"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sub_title"
                    style="@style/text_style"
                    android:text="子标题" />

                <EditText
                    android:id="@+id/et_sub_title"
                    style="@style/edit_text_style"
                    android:hint="请输入子标题" />

                <ImageView
                    android:id="@+id/iv_sub_title"
                    style="@style/image_view_style" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_color" />
            <RelativeLayout
                android:id="@+id/rl_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:clickable="true"
                android:focusable="true">
                <com.handpay.coupon.view.SwitchView
                    android:id="@+id/tv_log_state"
                    android:layout_width="58dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    app:primaryColor="#ed563a"
                    app:primaryColorDark="#ed563a"
                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_color" />

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:background="@color/grey_color" />-->
            <!--<Button-->
                <!--android:id="@+id/btn_upload"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_45"-->
                <!--android:layout_margin="@dimen/dp_10"-->
                <!--android:background="@drawable/bg_btn_login_selected"-->
                <!--android:text="@string/upload"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="18sp"-->
                <!--android:visibility="visible" />-->
        </LinearLayout>
    </com.handpay.coupon.view.MyNestedScrollView>

</layout>